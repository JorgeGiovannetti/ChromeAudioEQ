{
  "manifest_version": 2,
  "name": "ChromeAudioEQ",
  "version": "1.0",
  "description": "Equalize audio, adjust volume, and toggle between mono and stereo within your browser!",
  "permissions": [
    "activeTab",
    "tabCapture",
    "tabs",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo/logo16.png",
      "32": "logo/logo32.png",
      "64": "logo/logo64.png",
      "128": "logo/logo128.png"
    }
  }
}